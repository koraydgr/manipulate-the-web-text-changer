{
  "manifest_version": 3,
  "name": "Manipulate!",
  "version": "2.4.1",
  "description": "Select the text you want to change, right-click the selection, choose 'Manipulate!' to edit. Test text changes or fool friends!",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/16.png",
        "icons/48.png",
        "icons/128.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}